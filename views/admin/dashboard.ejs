<div class="container-lg py-5">
  <div class="admin-title">
    <h2>Admin Page</h2>
    <a href="/add-post" class="button">+ Add New</a>
    <a href="/logout" class="button">Logout</a>
  </div>

  <ul class="admin-posts">
    <div class="list-group">
      <table class="table table-hover">
        <thead>
          <tr>
            <th scope="col">Date</th>
            <th scope="col">Title</th>
          </tr>
        </thead>
        <% data.forEach(post=> { %>
          <tbody>
            <tr>
              <td><%= post.createdAt.toDateString() %></td>
              <td><a href="/post/<%= post._id %>" class="list-group-item list-group-item-action active">
                  <%= post.title %> &nearr;
                </a></td>
              <td><a href="/edit-post/<%= post._id %>" class="btn-edit btn">Edit</a></td>
              <td>
                <form action="/delete-post/<%= post._id %>?_method=DELETE" method="POST">
                  <input type="submit" value="Delete" class="btn-delete btn">
                </form>
              </td>
            </tr>
            <tr>
          </tbody>
          <% }) %>
      </table>
    </div>
  </ul>

</div>