<a href="/dashboard">&larr; Back to menu admin</a>
<div class="admin-title">
  <h2>View / Edit Post</h2>

  <form action="/delete-post/<%= data._id %>?_method=DELETE" method="POST">
    <input type="submit" value="Delete" class="btn-delete btn">
  </form>

</div>

<form action="/edit-post/<%= data._id %>?_method=PUT" method="POST">
  <div class="mb-3">
    <label for="title"><b>Author</b></label>
    <input type="text" name="author" value="<%= data.author %>" readonly />
  </div>
  <div class="mb-3">
    <label for="title"><b>Title</b></label>
    <input type="text" placeholder="Post Title" name="title" value="<%= data.title %>">
  </div>
  <div class="mb-3">
    <label for="category"><b>Category</b></label>
    <input type="text" placeholder="Post Category" name="topic" value="<%= data.topic %>">
  </div>
  <div class="mb-3">
    <label><b>Content</b></label>
    <textarea name="body" class="form-control" rows="8"><%= data.body %></textarea>
  </div>
  <button type="submit" class="btn-edit">Submit</button>
  <!-- <input type="submit" value="Update" class="btn"> -->

</form>